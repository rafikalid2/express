	<!-- Slider init js -->
	<script>
		$(document).ready(() => {
			$('#home-slider .carousel-inner').owlCarousel({
				items: 1,
				loop: true,
				autoplay: true,
			});

			$('#titled-slider .carousel-inner').owlCarousel({
				nav: true,
				items: 1,
				loop: true,
				autoplay: true,
