							<div class="owl-item">
								<% for (var k = 0; k < 3; k++) { -%>
								<div class="small-product">
									<div class="row">
										<div class="col-4">
											<div class="product-image">
												<a href="product-details"><img src="images/products/small/p<%= i + k %>.jpg"></a>
											</div>
										</div>
										<div class="col-8">
											<div class="product-details">
												<div class="product-category">Fashion</div>
												<div class="product-title"><a href="product-details">Women drees from zara</a></div>
