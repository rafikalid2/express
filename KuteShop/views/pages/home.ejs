													<span class="current-price"><%= currencySymbol %>290</span>
													<span class="origin-price"><%= currencySymbol %>350</span>
												</div>
											</div>
										</div>
									</div>
								</div>
								<% } -%>
							</div>
							<% } -%>
						</div>
					</div>
				</div>
